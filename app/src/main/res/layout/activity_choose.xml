<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ady.ergo.tool.ergotool.ChooseActivity">


    <Button
        android:id="@+id/btnCat1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onclickBtnLieux"
        android:text="Lieux"
        app:layout_constraintLeft_toLeftOf="@+id/btnStop"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />

    <Button
        android:id="@+id/btnCat2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onclickBtnCat2"
        android:text="Taches"
        app:layout_constraintLeft_toLeftOf="@+id/btnCat1"
        app:layout_constraintTop_toBottomOf="@+id/tvCat1" />

    <Button
        android:id="@+id/btnCat3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Ressources"
        android:onClick="onclickBtnCat3"
        app:layout_constraintLeft_toLeftOf="@+id/btnCat2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCat2" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onclickBtnStop"
        android:text="Stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditCat1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onclickBtnEditCat1"
        android:text="Edit"
        app:layout_constraintRight_toRightOf="@+id/btnStop"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />

    <Button
        android:id="@+id/btnEditCat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onclickBtnEditCat2"
        android:text="Edit"
        app:layout_constraintRight_toRightOf="@+id/btnEditCat1"
        app:layout_constraintTop_toTopOf="@+id/btnCat2" />

    <Button
        android:id="@+id/btnEditCat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onclickBtnEditCat3"
        android:text="Edit"
        app:layout_constraintRight_toRightOf="@+id/btnEditCat2"
        app:layout_constraintTop_toTopOf="@+id/btnCat3" />

    <TextView
        android:id="@+id/tvCat1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCat1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvCat2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCat2" />

    <TextView
        android:id="@+id/tvCat3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCat3" />

</android.support.constraint.ConstraintLayout>
